<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Med Reviewer</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/select2.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a href="index.html" id="branding">
                    <img src="~/Content/Images/logosite.png" alt="" class="logo">
                    <div class="logo-copy">
                        <h1 class="site-title">Med Reviewer</h1>
                        <small class="site-description">Review your med before you take!</small>
                    </div>
                </a> <!-- #branding -->
                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item current-menu-item">@Html.ActionLink("Home", "HomePage", "Home")</li>
                        @*<li class="menu-item"><a href="about.html">About</a></li>*@
                        <li class="menu-item">@Html.ActionLink("Medicine Reviews", "FindYourMed", "Review")</li>
                        @*<li class="menu-item"><a href="contact.html">Contact</a></li>*@
                        <li class="menu-item">@Html.ActionLink("Login", "Login", "Account")</li>
                    </ul> <!-- .menu -->
                    <form action="#" class="search-form">
                        <input type="text" placeholder="Search...">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div> <!-- .main-navigation -->
                <div class="mobile-navigation"></div>
            </div>
        </header>
        <main class="main-content">
            <div class="loader"><img src="~/Content/Images/spinned.gif" style="max-width:10%" /></div>
            @RenderBody()
        </main>
        <footer class="site-footer">
            <div class="container">

                <div class="colophon">Copyright @DateTime.Now.Year Med Reviewer, Designed by Themezy. All rights reserved</div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.select.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/Theme/plugins.js"></script>
    <script src="~/Scripts/Theme/app.js"></script>
    <script src="~/Scripts/starplugin.js"></script>
    @*<script src="~/Scripts/functions.min.js"></script>*@
    <script src="~/Scripts/toastr.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(document)
        .ajaxStart(function () {
            $('.loader').show()
        })
        .ajaxStop(function () {
            $('.loader').hide()
        });
</script>