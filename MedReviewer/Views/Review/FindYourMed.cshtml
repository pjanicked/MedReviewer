
@{
    ViewBag.Title = "FindYourMed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page">
        <form class="form-horizontal">

            <div class="row">
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Medicine Name: </label> <br />
                        <input type="text" class="form-control" name="medicinename" id="Medicinename" placeholder="Medicine Name" />
                    </div>

                    <div class="col-md-4">
                        <label>Manufacturer: </label> <br />
                        <input type="text" class="form-control" name="manufacturer" id="Manufacturer" placeholder="Manufacturer" />
                    </div>

                    <div class="col-md-4">
                        <label>Disease Type: </label> <br />
                        <input type="text" class="form-control" name="disease" id="Disease" placeholder="Disease" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-9">

                    </div>
                    <div class="col-md-3">
                        <input type="button" class="btn btn-primary pull-right" value="Search Your Med!" />
                    </div>
                </div>
            </div>
            <br />
            <hr />

            <div class="row">
                <table id="medicineTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Medicine Name</th>
                            <th>Medicine Type</th>
                            <th>Medicine Quantity</th>
                            <th>Medicine Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>a</td>
                            <td>b</td>
                            <td>c</td>
                            <td>d</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </form>

        <!-- Modal -->
        <div class="modal fade" id="addReviewModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Medicine Review</h4>
                    </div>
                    <div class="modal-body">
                       <!--Build Add form here-->
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primary" value="Add Your Review" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
@section scripts {
<style>
    div.dt-buttons {
        float: left;
        margin-left: 130px;
    }
    .my-btn {
        margin-right: 20px;
    }
</style>
<script>
    $(document).ready(function () {
        var dt_table = $('#medicineTable').DataTable({            
            columns: [
                { data: "MedicineName", },
                { data: "MedicineType", },
                { data: "MedicineQuantity", },
                { data: "MedicinePrice", },
            ],
            scrollX: true,
            dom:
                "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-5'i><'col-sm-7'p>>",
            buttons: [
                {
                    text: "<i class='fa fa-plus'></i> Add Review",                                        
                    className: "btn btn-primary my-btn",
                    init: function (api, node, config) {
                        $(node).removeClass('dt-button');
                    },
                    action: function (e, dt, node, config) {
                        $("#addReviewModal").modal("show");
                    }
                },
                {
                    text: "<i class='fa fa-pencil'></i> Edit Review",
                    className: "btn btn-primary",
                    init: function (api, node, config) {
                        $(node).removeClass('dt-button');
                    }
                }
            ]
        });

    });
</script>
}

